<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>oct-dist</artifactId>
        <groupId>eu.europa.ec.eci.oct</groupId>
        <version>3.0.0</version>
    </parent>

    <artifactId>oct-tomcat-public-war</artifactId>
    <packaging>war</packaging>

    <name>oct-tomcat-public-war</name>
            <build>
                <finalName>oct-web-public</finalName>
                <plugins>
                    <plugin>
                        <groupId>org.apache.tomcat.maven</groupId>
                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <version>2.2</version>
                        <executions>
                            <execution>
                                <id>tomcat-run</id>
                                <configuration>
                                    <skip>${maven.skip.tomcatPublic}</skip>
                                </configuration>

                                <goals>
                                    <goal>exec-war-only</goal>
                                </goals>
                                <phase>package</phase>
                            </execution>
                            <!--
                                            <execution>
                                                <id>deploy-public</id>
                                                <phase>package</phase>
                                                <goals>
                                                    <goal>deploy</goal>
                                                </goals>
                                                <configuration>
                                                    <update>true</update>
                                                    <url>http://localhost:8080/manager/text</url>
                                                    <server>tomcat-server</server>
                                                    <path>/oct-web-public</path>
                                                </configuration>
                                            </execution>
                            -->
                        </executions>
                    </plugin>
                </plugins>
            </build>
    <dependencies>
        <dependency>
            <groupId>eu.europa.ec.eci.oct</groupId>
            <artifactId>oct-web-public</artifactId>
            <version>3.0.0</version>
            <type>war</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.eci.oct</groupId>
            <artifactId>oct-web-commons</artifactId>
            <version>3.0.0</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>
